{
  "name": "@ctrl/ts-base32",
  "version": "0.0.0-placeholder",
  "description": "Base32 encoder/decoder with support for multiple variants",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/ts-base32",
  "homepage": "https://ts-base32.vercel.app",
  "keywords": [
    "base32",
    "rfc3548",
    "rfc4648",
    "crockford",
    "typescript"
  ],
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "scripts": {
    "demo:build": "npm run build --workspace=demo",
    "demo:watch": "npm run dev --workspace=demo",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "NODE_OPTIONS=\"--loader ts-node/esm\" uvu test",
    "test:watch": "NODE_OPTIONS=\"--loader ts-node/esm\" watchlist src test -- uvu test",
    "test:ci": "NODE_OPTIONS=\"--loader ts-node/esm\" c8 --reporter=text --reporter=lcov uvu test"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "2.0.13",
    "@sindresorhus/tsconfig": "2.0.0",
    "@types/node": "16.7.2",
    "buffer": "6.0.3",
    "c8": "7.8.0",
    "expect": "27.0.6",
    "ts-node": "10.2.1",
    "typescript": "4.3.5",
    "uvu": "0.5.1",
    "watchlist": "0.2.3"
  },
  "workspaces": [
    "demo"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=14.16"
  }
}
