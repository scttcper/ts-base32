{
  "name": "@ctrl/ts-base32",
  "version": "0.0.0-placeholder",
  "description": "Base32 encoder/decoder with support for multiple variants",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/ts-base32",
  "homepage": "https://ts-base32.vercel.app",
  "keywords": [
    "base32",
    "rfc3548",
    "rfc4648",
    "crockford",
    "typescript"
  ],
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "scripts": {
    "demo:build": "npm run build --workspace=demo",
    "demo:watch": "npm run dev --workspace=demo",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "uvu -r tsm test",
    "test:watch": "watchlist src test -- uvu -r tsm test",
    "test:ci": "c8 --reporter=text --reporter=lcov uvu -r tsm test"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "3.3.1",
    "@sindresorhus/tsconfig": "2.0.0",
    "@types/node": "17.0.10",
    "buffer": "6.0.3",
    "c8": "7.11.0",
    "expect": "27.4.6",
    "tsm": "2.2.1",
    "typescript": "4.5.4",
    "uvu": "0.5.3",
    "watchlist": "0.3.1"
  },
  "workspaces": [
    "demo"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=14.16"
  }
}
