{
  "name": "@ctrl/ts-base32",
  "version": "0.0.0-placeholder",
  "description": "Base32 encoder/decoder with support for multiple variants",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": "TypeCtrl/ts-base32",
  "homepage": "https://typectrl.github.io/ts-base32/",
  "keywords": [
    "base32",
    "rfc3548",
    "rfc4648",
    "crockford",
    "typescript"
  ],
  "source": "src/index.ts",
  "main": "./ts-base32.js",
  "module": "./ts-base32.m.js",
  "typings": "./src/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "demo": "npm-run-all --parallel start:demo watch:demo",
    "build:demo": "rollup -c rollup.demo.js",
    "watch:demo": "rollup -c rollup.demo.js -w",
    "start:demo": "serve demo/public",
    "lint": "tslint -t stylish -p .",
    "lint:fix": "tslint -p tsconfig.json -t stylish --fix 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "microbundle build --target node --format cjs,es -o dist",
    "postbuild": "cp package.json dist && cp LICENSE dist && cp README.md dist && rimraf dist/test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --no-cache",
    "semantic-release": "cd dist && semantic-release"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "23.3.13",
    "@types/node": "10.12.19",
    "buffer": "5.2.1",
    "jest": "23.6.0",
    "microbundle": "0.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.3",
    "rimraf": "2.6.2",
    "rollup": "1.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-typescript2": "0.18.1",
    "semantic-release": "15.13.2",
    "serve": "10.1.1",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-xo": "0.11.0",
    "typescript": "3.2.2"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
