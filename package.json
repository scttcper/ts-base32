{
  "name": "@ctrl/ts-base32",
  "version": "0.0.0-placeholder",
  "description": "Base32 encoder/decoder with support for multiple variants",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/ts-base32",
  "homepage": "https://ts-base32.vercel.app",
  "keywords": [
    "base32",
    "rfc3548",
    "rfc4648",
    "crockford",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
      ".": {
          "require": "./dist/index.cjs",
          "import": "./dist/index.js",
          "types": "./dist/index.d.ts"
      }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "demo:build": "npm run build --workspace=demo",
    "demo:watch": "npm run dev --workspace=demo",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsup",
    "test": "uvu -r tsm test",
    "test:watch": "watchlist src test -- uvu -r tsm test",
    "test:ci": "c8 --reporter=text --reporter=lcov uvu -r tsm test"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "2.2.0",
    "@sindresorhus/tsconfig": "2.0.0",
    "@types/node": "16.10.3",
    "buffer": "6.0.3",
    "c8": "7.10.0",
    "expect": "27.2.4",
    "tsm": "2.1.0",
    "tsup": "^5.11.10",
    "typescript": "4.4.3",
    "uvu": "0.5.1",
    "watchlist": "0.3.1"
  },
  "workspaces": [
    "demo"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=14.16"
  },
  "tsup": {
    "entry": [
        "src/index.ts"
    ],
    "splitting": true,
    "sourcemap": true,
    "dts": true,
    "minify": true,
    "clean": true,
    "format": [
        "esm",
        "cjs"
    ]
}
}
