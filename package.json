{
  "name": "@ctrl/ts-base32",
  "version": "0.0.0-placeholder",
  "description": "Base32 encoder/decoder with support for multiple variants",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/ts-base32",
  "homepage": "https://ts-base32.vercel.app",
  "keywords": [
    "base32",
    "rfc3548",
    "rfc4648",
    "crockford",
    "typescript"
  ],
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "scripts": {
    "demo:build": "rollup -c rollup.demo.js",
    "demo:watch": "rollup -c rollup.demo.js -w",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "NODE_OPTIONS=\"--loader ts-node/esm\" uvu test",
    "test:watch": "NODE_OPTIONS=\"--loader ts-node/esm\" watchlist src test -- uvu test",
    "test:ci": "NODE_OPTIONS=\"--loader ts-node/esm\" c8 --reporter=text --reporter=lcov uvu test"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "2.0.13",
    "@sindresorhus/tsconfig": "1.0.2",
    "@types/node": "16.7.1",
    "buffer": "6.0.3",
    "c8": "7.8.0",
    "expect": "27.0.6",
    "rollup": "2.56.2",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-serve": "1.1.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "ts-node": "10.2.1",
    "typescript": "4.3.5",
    "uvu": "0.5.1",
    "watchlist": "0.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/**.ts"
    ],
    "testMatch": [
      "**/test/**/**.spec.ts"
    ],
    "coverageProvider": "v8",
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "isolatedModules": true,
        "transpiler": "ts-node/transpilers/swc-experimental"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=14.16"
  }
}
