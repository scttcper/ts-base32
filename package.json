{
  "name": "@ctrl/ts-base32",
  "version": "0.0.0-placeholder",
  "description": "Base32 encoder/decoder with support for multiple variants",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": "TypeCtrl/ts-base32",
  "homepage": "https://typectrl.github.io/ts-base32/",
  "keywords": [
    "base32",
    "rfc3548",
    "rfc4648",
    "crockford",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/module/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "demo": "npm-run-all --parallel start:demo watch:demo",
    "build:demo": "rollup -c rollup.demo.js",
    "watch:demo": "rollup -c rollup.demo.js -w",
    "start:demo": "serve demo/public",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts test/**/*.ts",
    "prepare": "npm run build",
    "build": "del dist && tsc -p tsconfig.json && tsc -p tsconfig.module.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --no-cache",
    "semantic-release": "semantic-release"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "24.0.12",
    "@types/node": "12.0.0",
    "@typescript-eslint/eslint-plugin": "1.8.0",
    "@typescript-eslint/parser": "1.8.0",
    "buffer": "5.2.1",
    "del-cli": "1.1.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-config-xo-space": "0.21.0",
    "eslint-config-xo-typescript": "0.11.0",
    "eslint-plugin-import": "2.17.2",
    "jest": "24.8.0",
    "npm-run-all": "4.1.5",
    "rollup": "1.11.3",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-terser": "4.0.4",
    "rollup-plugin-typescript2": "0.21.0",
    "semantic-release": "15.13.12",
    "serve": "11.0.0",
    "ts-jest": "24.0.2",
    "typescript": "3.4.5"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
