{
  "name": "@ctrl/ts-base32",
  "version": "0.0.0-placeholder",
  "description": "Base32 encoder/decoder with support for multiple variants",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/ts-base32",
  "homepage": "https://ts-base32.vercel.app",
  "keywords": [
    "base32",
    "rfc3548",
    "rfc4648",
    "crockford",
    "typescript"
  ],
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "scripts": {
    "demo:build": "npm run build --workspace=demo",
    "demo:watch": "npm run dev --workspace=demo",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=./junit.xml"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "3.5.0",
    "@sindresorhus/tsconfig": "3.0.1",
    "@types/node": "18.7.18",
    "buffer": "6.0.3",
    "c8": "7.12.0",
    "typescript": "4.8.3",
    "vitest": "0.23.2"
  },
  "workspaces": [
    "demo"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "engines": {
    "node": ">=14.16"
  }
}
